- model_class = Service
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:vendor_id) + ':'
  %br
  = @service.vendor_id
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @service.category_id
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @service.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @service.description
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @service.type


= link_to t('.back', :default => t("helpers.links.back")), services_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_service_path(@service), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), service_path(@service), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
