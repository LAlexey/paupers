- model_class = Vendor
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @vendor.name
%p
  %strong= model_class.human_attribute_name(:permalink) + ':'
  %br
  = @vendor.permalink
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @vendor.description


= link_to t('.back', :default => t("helpers.links.back")), admin_vendors_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_vendor_path(@vendor), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_vendor_path(@vendor), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
