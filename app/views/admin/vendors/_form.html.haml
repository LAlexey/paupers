= bootstrap_form_for([:admin, @vendor], layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10') do |f|
  = f.text_field :name
  = f.text_field :permalink
  = f.text_field :description

  = f.submit 'Сохранить'

  = link_to t('.cancel', :default => t('helpers.links.cancel')), services_path, :class => 'btn btn-default'
