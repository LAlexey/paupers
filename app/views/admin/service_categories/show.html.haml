- model_class = ServiceCategory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @service_category.title
%p
  %strong= model_class.human_attribute_name(:permalink) + ':'
  %br
  = @service_category.permalink


= link_to t('.back', :default => t("helpers.links.back")), admin_service_categories_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_service_category_path(@service_category), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_service_category_path(@service_category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
