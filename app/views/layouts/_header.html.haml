.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="#") Services
    .navbar-collapse.collapse.navbar-responsive-collapse.navbar-right
      %ul.nav.navbar-nav
        %li= link_to 'О нас','#'
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            Категории
            %i.fa.fa-angle-down
          %ul.dropdown-menu
            %li= link_to "Link 1", "/path1"
            %li= link_to "Link 2", "/path2"
            %li= link_to "Link 3", "/path3"
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            Лента
            %i.fa.fa-angle-down
          %ul.dropdown-menu
            %li= link_to "Спец статьи", "#"
            %li= link_to 'Новости','#'
        - if user_signed_in?
          %li
            %span= current_user.email
          %li= link_to 'Выход', destroy_session_path(current_user), method: :delete
        - else
          %li
            %a{href: "#", data: { toggle: :modal, target: '#popup' }}
              Войти
              = current_user.try(:email)